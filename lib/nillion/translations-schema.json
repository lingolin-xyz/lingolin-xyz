{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lingolin Translations",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "fromLanguage": {
        "type": "string"
      },
      "toLanguage": {
        "type": "string"
      },
      "message": {
        "type": "string"
      },
      "translation": {
        "type": "string"
      }
    },
    "required": ["_id", "fromLanguage", "toLanguage", "message", "translation"]
  }
}
