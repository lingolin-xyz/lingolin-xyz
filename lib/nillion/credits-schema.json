{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lingolin Credits",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "userid": {
        "type": "string",
        "required": ["userid"]
      },
      "credits": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "integer"
          }
        },
        "required": ["%share"]
      }
    },
    "required": ["_id", "userid", "credits"]
  }
}
