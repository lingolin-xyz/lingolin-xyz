{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lingolin Translations",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "word": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "translation": {
        "type": "string",
        "required": ["translation"]
      }
    },
    "required": ["_id", "word", "translation"]
  }
}
